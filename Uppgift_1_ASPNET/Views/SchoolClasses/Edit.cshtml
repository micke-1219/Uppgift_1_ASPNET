@model Uppgift_1_ASPNET.Models.EditSchoolClassViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.CurrentClass.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.CurrentClass.Id" />
            <div class="form-group">
                @Html.DropDownListFor(m => m.CurrentClass.Teacher, new SelectList(Model.Teachers, "Id", "DisplayName"), "Select Teacher", htmlAttributes: new { @class = "w-50" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.CurrentClass.Students, new SelectList(Model.Students, "Id", "DisplayName"), "Add Student", htmlAttributes: new { @class = "w-50" })
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
